<idea-plugin>
    <id>io.github.sibmaks.jjtemplate.idea</id>
    <name>JJTemplate Support</name>
    <vendor email="sibmaks@gmail.com" url="https://github.com/sibmaks">sibmaks</vendor>

    <description><![CDATA[
        Support for JJTemplate (*.jjtemplate) files: syntax highlighting, completion and built-in function docs.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="JJTemplate"
                  implementationClass="io.github.sibmaks.jjtemplate.idea.lang.JjtemplateFileType"
                  fieldName="INSTANCE"
                  language="JJTemplate"
                  extensions="jjtemplate"/>
        <lang.syntaxHighlighterFactory language="JJTemplate"
                                       implementationClass="io.github.sibmaks.jjtemplate.idea.lang.JjtemplateSyntaxHighlighterFactory"/>
        <lang.parserDefinition language="JJTemplate"
                               implementationClass="io.github.sibmaks.jjtemplate.idea.lang.JjtemplateParserDefinition"/>
        <completion.contributor language="JJTemplate"
                                implementationClass="io.github.sibmaks.jjtemplate.idea.completion.JjtemplateCompletionContributor"/>
        <lang.documentationProvider language="JJTemplate"
                                    implementationClass="io.github.sibmaks.jjtemplate.idea.docs.JjtemplateDocumentationProvider"/>
        <annotator language="JJTemplate"
                   implementationClass="io.github.sibmaks.jjtemplate.idea.lang.JjtemplateAnnotator"/>
    </extensions>
</idea-plugin>
